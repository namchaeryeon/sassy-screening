<button onclick="routeParticipant()">Continue</button>

<script>
function routeParticipant() {

  const q1 = document.querySelector('input[name="q1"]:checked');
  const q2 = document.querySelector('input[name="q2"]:checked');
  const q3 = document.querySelector('input[name="q3"]:checked');
  const q4 = document.querySelector('input[name="q4"]:checked');

  if (!q1 || !q2 || !q3 || !q4) {
    return;
  }

  const pattern = q1.value + q2.value + q3.value + q4.value;

  /* ========= ENUMERATED LOOKUP TABLE ========= */
  const engaged = [
    "1111",
    "1112"
    // Alarmed + Concerned patterns
  ];

  const denier = [
    "5455"
    // Doubtful + Dismissive patterns
  ];
  /* ========================================== */

  if (engaged.includes(pattern)) {
    window.location.href = "engaged.html";
    return;
  }

  if (denier.includes(pattern)) {
    window.location.href = "denier.html";
    return;
  }

  window.location.href = "exit.html";
}
</script>

